<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="4.0">
  <Target Name="build-tasks-deploying-DeployToTest">
    <Exec Command="$(OctoExe) create-release --project=ALM-Demo --deployto=Test --version=$(BuildVersion) --packageversion=$(BuildVersion) --waitfordeployment" />
  </Target>
  
  <Target Name="build-tasks-deploying-PromoteToAcceptance">
    <Exec Command="$(OctoExe) deploy-release --project=ALM-Demo --deployto=Acceptance --version=$(BuildVersion) --packageversion=$(BuildVersion) --waitfordeployment" />
  </Target>

  <Target Name="build-tasks-deploying-PromoteToProduction">
    <Exec Command="$(OctoExe) deploy-release --project=ALM-Demo --deployto=Production --version=$(BuildVersion) --waitfordeployment" />
  </Target>
</Project>